<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.xwiki.contrib</groupId>
    <artifactId>parent-platform</artifactId>
    <version>13.9</version>
  </parent>
  <groupId>org.xwiki.contrib.changerequest</groupId>
  <artifactId>application-changerequest</artifactId>
  <version>0.7-SNAPSHOT</version>
  <name>Application Change Request - Parent</name>
  <description>Allow to request changes in pages that needs approval to be published.</description>
  <packaging>pom</packaging>
  <developers>
    <developer>
      <id>surli</id>
      <name>Simon Urli</name>
      <organization>XWiki SAS</organization>
      <organizationUrl>http://www.xwiki.com</organizationUrl>
    </developer>
  </developers>
  <distributionManagement>
    <repository>
      <id>xwiki-staging</id>
      <name>XWiki Staging Repository</name>
      <url>http://nexus.xwiki.org/nexus/service/local/staging/deploy/maven2/</url>
    </repository>
  </distributionManagement>
  <scm>
    <connection>scm:git:git://github.com/xwiki-contrib/application-changerequest.git</connection>
    <developerConnection>scm:git:git@github.com:xwiki-contrib/application-changerequest.git</developerConnection>
    <url>https://github.com/xwiki-contrib/application-changerequest/tree/master</url>
    <tag>HEAD</tag>
  </scm>
  <properties>
    <xwiki.release.jira.skip>false</xwiki.release.jira.skip>
    <xwiki.issueManagement.jira.id>CRAPP</xwiki.issueManagement.jira.id>
    <discussions.version>2.0-rc-1</discussions.version>
    <rights-api.version>1.2-SNAPSHOT</rights-api.version>
  </properties>
  <modules>
    <module>application-changerequest-api</module>
    <module>application-changerequest-default</module>
    <module>application-changerequest-ui</module>
    <module>application-changerequest-notifications</module>
    <module>application-changerequest-discussions</module>
  </modules>
  <profiles>
    <profile>
      <id>integration-tests</id>
      <modules>
        <module>application-changerequest-test</module>
      </modules>
    </profile>
  </profiles>
  <build>
    <plugins>
      <plugin>
        <groupId>org.revapi</groupId>
        <artifactId>revapi-maven-plugin</artifactId>
        <configuration>
          <analysisConfiguration>
            <revapi.differences>
              <criticality>highlight</criticality>
              <differences>
                <item>
                  <ignore>true</ignore>
                  <code>java.method.numberOfParametersChanged</code>
                  <old>method void org.xwiki.contrib.changerequest.notifications.events.ChangeRequestFileChangeAddedRecordableEvent::&lt;init&gt;(java.lang.String)</old>
                  <new>method void org.xwiki.contrib.changerequest.notifications.events.ChangeRequestFileChangeAddedRecordableEvent::&lt;init&gt;(java.lang.String, java.lang.String)</new>
                  <justification>Unstable API: we changed the constructor of the event so that we can retrieve the file change related to the event.</justification>
                </item>
                <item>
                  <ignore>true</ignore>
                  <code>java.method.numberOfParametersChanged</code>
                  <old>method void org.xwiki.contrib.changerequest.ChangeRequestMergeDocumentResult::&lt;init&gt;(boolean)</old>
                  <new>method void org.xwiki.contrib.changerequest.ChangeRequestMergeDocumentResult::&lt;init&gt;(boolean, java.lang.String)</new>
                  <justification>Unstable API: add missing information to be able to retrieve the file change from a merge result.</justification>
                </item>
                <item>
                  <ignore>true</ignore>
                  <code>java.method.numberOfParametersChanged</code>
                  <old>method void org.xwiki.contrib.changerequest.ChangeRequestMergeDocumentResult::&lt;init&gt;(org.xwiki.store.merge.MergeDocumentResult)</old>
                  <new>method void org.xwiki.contrib.changerequest.ChangeRequestMergeDocumentResult::&lt;init&gt;(org.xwiki.store.merge.MergeDocumentResult, java.lang.String)</new>
                  <justification>Unstable API: add missing information to be able to retrieve the file change from a merge result.</justification>
                </item>
                <item>
                  <ignore>true</ignore>
                  <code>java.method.returnTypeChangedCovariantly</code>
                  <old>method java.lang.Object java.lang.Object::clone() throws java.lang.CloneNotSupportedException @ org.xwiki.contrib.changerequest.FileChange</old>
                  <new>method org.xwiki.contrib.changerequest.FileChange org.xwiki.contrib.changerequest.FileChange::clone()</new>
                  <justification>Unstable API: define a proper cloning of filechange to allow rebase feature.</justification>
                </item>
                <item>
                  <ignore>true</ignore>
                  <code>java.method.addedToInterface</code>
                  <new>method void org.xwiki.contrib.changerequest.storage.FileChangeStorageManager::rebase(org.xwiki.contrib.changerequest.FileChange) throws org.xwiki.contrib.changerequest.ChangeRequestException</new>
                  <justification>Unstable API: the API was missing for rebase feature.</justification>
                </item>
                <item>
                  <ignore>true</ignore>
                  <code>java.method.removed</code>
                  <old>method boolean org.xwiki.contrib.changerequest.ChangeRequestManager::isAuthorizedToChangeStatus(org.xwiki.user.UserReference, org.xwiki.contrib.changerequest.ChangeRequest)</old>
                  <justification>Unstable API: this method was made more generic and renamed isAuthorizedToEdit.</justification>
                </item>
                <item>
                  <ignore>true</ignore>
                  <code>java.method.removed</code>
                  <old>method boolean org.xwiki.contrib.changerequest.script.ChangeRequestScriptService::canStatusBeChanged(org.xwiki.contrib.changerequest.ChangeRequest)</old>
                  <justification>Unstable API: this method was made more generic and renamed isAuthorizedToEdit.</justification>
                </item>

              </differences>
            </revapi.differences>
          </analysisConfiguration>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <!-- Dependency management to handle version issues related to the usage of discussion -->
  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.xwiki.commons</groupId>
        <artifactId>xwiki-commons-component-api</artifactId>
        <version>${commons.version}</version>
      </dependency>
      <dependency>
        <groupId>org.xwiki.rendering</groupId>
        <artifactId>xwiki-rendering-api</artifactId>
        <version>${rendering.version}</version>
      </dependency>
      <dependency>
        <groupId>org.xwiki.commons</groupId>
        <artifactId>xwiki-commons-script</artifactId>
        <version>${commons.version}</version>
      </dependency>
      <dependency>
        <groupId>org.xwiki.platform</groupId>
        <artifactId>xwiki-platform-user-api</artifactId>
        <version>${platform.version}</version>
      </dependency>
      <dependency>
        <groupId>org.xwiki.platform</groupId>
        <artifactId>xwiki-platform-oldcore</artifactId>
        <version>${platform.version}</version>
      </dependency>
      <dependency>
        <groupId>org.xwiki.platform</groupId>
        <artifactId>xwiki-platform-container-servlet</artifactId>
        <version>${platform.version}</version>
      </dependency>
      <dependency>
        <groupId>org.xwiki.platform</groupId>
        <artifactId>xwiki-platform-icon-api</artifactId>
        <version>${platform.version}</version>
      </dependency>
      <dependency>
        <groupId>org.xwiki.platform</groupId>
        <artifactId>xwiki-platform-security-bridge</artifactId>
        <version>${platform.version}</version>
      </dependency>
    </dependencies>
  </dependencyManagement>
</project>
